                    <a href="#!" id="collection-item" class="collection-item">{{list_8}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_9}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_10}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_11}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_12}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_13}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_14}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_15}}</a>
