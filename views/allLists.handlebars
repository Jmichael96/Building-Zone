<head>
    <link rel="stylesheet" href="/assets/css/lists.css">
</head>
<a href="clear-lists" class="btn btn-outline-danger" id="clearall" role="button" aria-disabled="true">Delete
                all</a>
    <p id="page-title" class="center-align">ALL LISTS</p>

    {{#each List}}
    <div class="row col s12">
    <!-- Modal Trigger -->
    <div class="col s2 m2 l3"></div>
    <div class="col">
        <a href="/delete-list/{{id}}" class="btn btn-outline-danger" id="delete-one" role="button" aria-disabled="true">X</a>
        <a id="modal-btn" class="btn-large modal-trigger" href="#{{_id}}">
            <b>{{name}}</b>
            <b id="date"> Date:</b> {{date}}</a>
        <a href="/save/{{id}}" class="btn" id="save-item" role="button" aria-disabled="true">Check List</a>
    
    </div>
    <div class="col s2 m2 l3"></div>
    </div>
    <!-- Modal Structure -->
    <div id="{{_id}}" class="modal">
        <div class="modal-content">
            <p>{{name}}</p>
            <p>{{date}}</p>
            <span>
                <p class="center white-text">(Click on a list to complete it)</p>
                <div id="collection" class="collection">
                    <a href="#!" id="collection-item" class="collection-item">{{list_1}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_2}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_3}}</a>
                    <a href="#!" id="collection-item" class="collection-item">{{list_4}}</a>
