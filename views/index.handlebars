                <div class="col">
                    <div id='card' class="card">
                        <div class="card-content center-align">
                            <span class="card-title activator">Documents</span>
                            <hr />
                            <p></p>
                        </div>
                        <br>
                        <div class="card-action">
                            <a class="btn" href="#">REVIEW</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
