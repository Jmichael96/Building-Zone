<!-- Main content -->
<main>
    <!-- Streak -->
    <div id="mid-bg">
        <!-- container -->
        <div class="container">
            <!-- row for cards -->
            <div class="row center-align">
                <!-- Grid one -->
                <div class="col">
                    <div id='card' class="card">
                        <div class="card-content center-align">
                            <span class="card-title">DAILY LOGS</span>
                            <hr />
                            <p>Document your daily jobs with this feature</p>
                        </div>
                        <br>
                        <div class="card-action">
                            <a class="modal-trigger btn" href="#logModal">Create</a>
                            <a href="/alllogs" class="btn">All</a>
                        </div>
