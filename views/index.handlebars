                                        <div class="input-field col s6">
                                            <input id="list-15" type="text" name="list_15" data-length="30">
                                        </div>
                                        <div class="input-field col s6">
                                            <input id="list-16" type="text" name="list_16" data-length="30">
                                        </div>
                                        <div class="input-field col s6">
                                            <input id="list-17" type="text" name="list_17" data-length="30">
                                        </div>
                                        <div class="input-field col s6">
                                            <input id="list-18" type="text" name="list_18" data-length="30">
                                        </div>

                                    </div>
                                    <!-- end checklist -->
                                    <button id="submit-list" class="btn submit pulse">Submit
                                        <i class="material-icons right">send</i>
                                    </button>
                                </form>
                            </div>
                            <div id="modal-footer" class="modal-footer">
                                <a id="addItem" href="#!" class="btn-floating ">
                                    <i class="material-icons">add</i>
                                </a>

                                <button id="share-list" href="" class="btn share center-align">Share</button>
                                <button id="cancel-btn" href="#!" class="btn modal-close ">Cancel</button>
                            </div>
                        </div>
                        <!-- end modal -->
                    </div>
                    {{!-- end card --}}
                </div>
            </div>
            <!-- end row -->
            <div class="row center-align">
                <!-- Grid one -->
                <div class="col">
                    <div id='card' class="card">
                        <div class="card-content center-align">
                            <span class="card-title">INVOICE</span>
                            <hr />
                            <p>Create an invoice for billing</p>
                        </div>
                        <br>
                        <div class="card-action">
                            <a class="btn" href="/invoice">CREATE</a>
                            <a class="btn">ALL</a>
                        </div>
                    </div>
                </div>
                <!-- end card -->

                <!-- end grid one -->
                <!-- CARD START TICKET FORM -->
                <div class="col">
                    <div id='card' class="card">
                        <div class="card-content center-align">
                            <span class="card-title">TICKET FORMS</span>
                            <hr />
                            <p>Create a ticket for the job</p>
                        </div>
                        <br>
                        <div class="card-action">
                            <a class="modal-trigger btn" href="#ticket-modal">CREATE</a>
                            <a class="modal-trigger btn" href="/alltickets">ALL</a>
                        </div>
                        <!-- Modal Structure -->
                        <div id="ticket-modal" class="modal modal-fixed-footer">
                            <div class="modal-content">
                                <p id="modal-title">Ticket Form</p>
                                <form action="/ticket" method="POST">
                                    <div class="row">
                                        <!-- date picker -->
                                        <div class="input-field col s6">
                                            <input id="ticket-date" type="date" name="date" class="ticketDatePicker">
                                        </div>
                                        <!-- Company name -->
                                        <div class="input-field col s6">
                                            <input value="" id="ticket-company-name" name="company" type="text" class="validate">
                                            <label class="active" for="ticket-company-name">Company Name</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <!-- job title -->
                                        <div class="input-field col s6">
                                            <input value="" id="ticket-job-title" name="job_title" type="text" class="validate">
                                            <label class="active" for="ticket-job-title">Job Title</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <input type="text" class="form-input" name="address" id="ticket-address" placeholder="1823 Air Born Dr, Katy Tx" />
                                            <label class="active" for="ticket-address">Address</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s6">
                                            <textarea id="ticket-job-description" name="job_desc" class="materialize-textarea"></textarea>
                                            <label for="ticket-job-description">Job Description</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <textarea id="ticket-materials" name="materials_used" class="materialize-textarea"></textarea>
                                            <label for="ticket-materials">Materials Used</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <textarea id="ticket-equipment-used" name="equipment_used" class="materialize-textarea"></textarea>
                                            <label for="ticket-equipment-used">Equipment Used</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <textarea id="ticket-equipment-rented" name="equipment_rented" class="materialize-textarea"></textarea>
                                            <label for="ticket-equipment-rented">Equipment Rented</label>
                                        </div>
                                        <!-- how many hours worked -->
                                        <div class="input-field col s6">
                                            <input id="ticket-hours" name="hours" type="text">
                                            <label for="ticket-hours">Hours Worked</label>
                                        </div>
                                        <!-- number of employes or names -->
                                        <div class="input-field col s6">
                                            <input id="ticket-employees" name="employees" type="text">
                                            <label for="ticket-employees">Names or Number of employees</label>
                                        </div>
                                    </div>
                                    <!-- follow up needed in form -->
                                    <div id="modal-break">
                                        <hr id="modal-break">
                                        <p id="modal-title">Follow Up Needed</p>
                                        <hr>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s6">
                                            <textarea id="follow-up-description" name="follow_job_desc" class="materialize-textarea"></textarea>
                                            <label for="follow-up-description">Job Description</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <textarea id="follow-up-materials" name="follow_materials" class="materialize-textarea"></textarea>
                                            <label for="follow-up-materials">Materials Needed</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s6">
                                            <textarea id="follow-equipment-needed" name="follow_equipment_needed" class="materialize-textarea"></textarea>
                                            <label for="follow-equipment-needed">Equipment Needed</label>
                                        </div>
                                        <!-- how many hours worked -->
                                        <div class="input-field col s6">
                                            <input id="follow-up-hours" name="follow_hours_worked" type="text">
                                            <label for="follow-up-hours">Hours worked</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="input-field col s6">
                                            <textarea id="total-hours" name="total_hours" class="materialize-textarea"></textarea>
                                            <label for="total-hours">Total Hours Worked</label>
                                        </div>
                                        <div class="input-field col s6">
                                            <textarea id="invoice-number" name="invoice_number" class="materialize-textarea"></textarea>
                                            <label for="invoice-number">Invoice number</label>
                                        </div>
                                    </div>
                                    <button id="submit-ticket" class="btn submit pulse">Submit
                                    <i class="material-icons right">send</i>
                                </button>
                                </form>
                            </div>
                            <div id="modal-footer" class="modal-footer">
                                
                                <button id="share-ticket" href="" class="btn share center-align">Share</button>
                                <button id="cancel-btn" href="#!" class="btn modal-close ">Cancel</button>
                            </div>
                        </div>
                        <!-- end modal -->
                    </div>
                </div>
                <!-- Grid three To Do List -->
                <div class="col">
                    <div id='card' class="card">
                        <div class="card-content center-align">
