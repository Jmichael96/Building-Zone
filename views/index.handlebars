                                <p id="modal-title" class="center-align">Daily Log</p>
                                <hr />
                                <form action="log" method="POST">
                                    <div class="row">
                                        <!-- date picker -->
                                        <div class="input-field col s4">
                                            <input id="log-date" type="date" name="date" class="logDatePicker">
                                        </div>
                                    </div>
                                    <div class="row">
                                        <!-- job title -->
                                        <div class="input-field col s6">
                                            <input value="" id="job-title" type="text" name="job_title" class="validate">
                                            <label class="active" for="job-title">Job Title</label>
                                        </div>
                                        <!-- Company name -->
                                        <div class="input-field col s6">
                                            <input value="" id="company-name" name="company" type="text" class="validate">
