<div id="form" class="container">
<p id="title" class="center-align">Document</p>
<hr />
    <form action="log" method="POST">
        <div class="row">
            <!-- datepicker -->
            <div id="datepicker" class="col s4">
                <input id="document-date" placeholder="Date" name="date" type="text" class="datepicker black-text">
            </div>
        </div>
        <div class="row">
            <!-- job title -->
            <div class="input-field col s6">
                <input value="" id="name" type="text" name="name" class="validate">
                <label class="active" for="name">Name</label>
            </div>
            <!-- Company name -->
            <div class="input-field col s6">
                <input value="" id="log1" name="log1" type="text" class="validate">
                <label class="active" for="log1">Log</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <textarea id="log2" name="log2" class="materialize-textarea" data-length="120"></textarea>
                <label for="log2">Log Two</label>
            </div>
            <div class="input-field col s6">
                <input type="text" id="log3" name="log3" id="hours-worked"></input>
                <label for="log3">Log Three</label>
            </div>
        </div>
    </form>
<button id="submit-document" class="btn submit pulse">Save</button>
<button id="share-log" href="" class="btn share center-align">Share</button>
<button id="cancel-btn" href="/document" class="btn modal-close">Cancel</button>
