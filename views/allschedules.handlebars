<head>
    <link rel="stylesheet" href="/assets/css/schedules.css">
</head>
<a href="clear-lists" class="btn btn-outline-danger" id="clearall" role="button" aria-disabled="true">Delete all</a>
<div class="container">
    <p id="page-title" class="center-align">ALL SCHEDULES</p>
</div>

{{#each Schedule}}
<div class="row col s12">
    <div class="col s2 m2 l3"></div>
    <!-- Modal Trigger -->
    <div class="col">
        <a href="/delete-schedule/{{id}}" class="btn btn-outline-danger" id="delete-one" role="button" aria-disabled="true">X</a>
        <a id="modal-btn" class="btn-large modal-trigger" href="#{{_id}}">
            <b>FROM: </b> {{from_date}}</a>
    </div>
    <div class="col s2 m2 l3"></div>
</div>
<!-- Modal Structure -->
<div id="{{_id}}" class="modal">
    <div class="modal-content">
        <span>
            <p>
                <b id="company">DATE: </b> {{from_date}}</p>
            <hr />
            <p>
                <b id="company">JOB TITLE: </b> {{to_date}}</p>
            <hr />
            <p>
                <b id="company">COMPANY:</b> {{description}}</p>
            <hr />
        </span>
        <div class="divider"></div>
        <p id="title-update" class="center">UPDATE LOG</p>
        <p class="center">(If you wish to update your log fill out the form and submit it.)</p>
        <div class="divider"></div>
        <form action='update-schedule/{{id}}' method='post'>
            <div class="form-group">
                <div class="row">
                    <div id="datepicker" class="col s5">
                        <input id="from-date" value="{{from_date}}" placeholder="Date" name="from_date" type="text" class="datepicker">
                    </div>
                    <div class="input-field col s1">
                        <input disabled value="TO" class="white-text" id="invoice" type="text" name="to_date" class="validate"
                            placeholder="">
                    </div>
                    <div id="datepicker" class="col s5">
                        <input id="to-date" value="{{to_date}}" placeholder="Date" name="to_date" type="text" class="datepicker">
                    </div>
                    <div class="row">
                        <!-- description -->
                        <div class="input-field col s12">
                            <input id="description" value="{{description}}" class="validate" name="description" placeholder="" rows="5">
                            <label class="active" for="description">Description</label>
                        </div>
                    </div>
                    <div class="row">
                        <button type="submit" class="btn btn-outline-primary" id="submit-schedule">UPDATE</button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
{{/each}}

<script type="text/javascript" src="/assets/js/schedules.js"></script>